{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["src"],
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
  },
  "include": ["src"]
} 